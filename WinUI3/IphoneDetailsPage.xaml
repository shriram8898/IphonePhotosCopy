<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="WinUI3.IphoneDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MaxHeight="75" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <Button
                x:Name="CopyFolderPath"
                Margin="20,0"
                Click="CopyFolderPath_Click"
                Content="Pick the folder to copy" />
            <Button
                x:Name="SearchIcon"
                Click="SearchIcon_Click"
                Content="Refresh Device and Display photos" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="FoldersInfoTb"
                Grid.Row="0"
                Margin="20,0" />
            <ProgressBar
                x:Name="FoldersProgressBar"
                Grid.Row="1"
                Width="300"
                Height="80"
                Margin="20,0"
                IsIndeterminate="False"
                Maximum="100"
                Minimum="0"
                Value="0" />
            <TextBlock
                x:Name="FilsInfoTb"
                Grid.Row="2"
                Margin="20,0" />
            <ProgressBar
                x:Name="FilsProgressBar"
                Grid.Row="3"
                Width="300"
                Height="80"
                Margin="20,0"
                IsIndeterminate="False"
                Maximum="100"
                Minimum="0"
                Value="0" />
        </Grid>


        <ListView
            x:Name="ErrorListView"
            Grid.Row="2"
            ItemsSource="{x:Bind ErrorDetailCollection, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:ErrorDetails">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="ErrorTypeTextBlock"
                            Grid.Column="0"
                            Margin="5"
                            FontWeight="Bold">
                            <Run Text="Unable to copy item : " />
                            <Run Text="{x:Bind FileName, Mode=OneWay}" />
                        </TextBlock>

                        <TextBlock
                            x:Name="ErrorMessageTextBlock"
                            Grid.Column="1"
                            Margin="5"
                            Text="{x:Bind Message, Mode=OneWay}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--<GridView
            Grid.Row="1"
            ItemsSource="{x:Bind MediaFiles}"
            Visibility="Collapsed">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:MediaFileItem">
                    <StackPanel>
                        <Image
                            Width="100"
                            Height="100"
                            Source="{x:Bind Thumbnail}" />
                        <TextBlock Text="{x:Bind FileName}" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>-->
    </Grid>
</UserControl>
