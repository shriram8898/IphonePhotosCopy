<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:ConnectionId='1'
    x:Class="WinUI3.IphoneDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MaxHeight="75" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <Button x:ConnectionId='12'
                x:Name="CopyFolderPath"
                Margin="20,0"
                                            
                Content="Pick the folder to copy" />
            <Button x:ConnectionId='13'
                x:Name="SearchIcon"
                                        
                Content="Refresh Device and Display photos" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock x:ConnectionId='8'
                x:Name="FoldersInfoTb"
                Grid.Row="0"
                Margin="20,0" />
            <ProgressBar x:ConnectionId='9'
                x:Name="FoldersProgressBar"
                Grid.Row="1"
                Height="20"
                Margin="20,0"
                IsIndeterminate="False"
                Maximum="100"
                Minimum="0"
                Value="0" />
            <TextBlock x:ConnectionId='10'
                x:Name="FilsInfoTb"
                Grid.Row="2"
                Margin="20,0" />
            <ProgressBar x:ConnectionId='11'
                x:Name="FilsProgressBar"
                Grid.Row="3"
                Height="20"
                Margin="20,0"
                IsIndeterminate="False"
                Maximum="100"
                Minimum="0"
                Value="0" />
        </Grid>


        <ListView x:ConnectionId='2'
            x:Name="ErrorListView"
            Grid.Row="2"
                                                                     >
            <ListView.ItemTemplate>
                <DataTemplate                                >
                    <Grid x:ConnectionId='4'>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="ErrorTypeTextBlock"
                            Grid.Column="0"
                            Margin="5"
                            FontWeight="Bold">
                            <Run Text="Unable to copy item : " />
                            <Run x:ConnectionId='7'                                       />
                        </TextBlock>

                        <TextBlock x:ConnectionId='6'
                            x:Name="ErrorMessageTextBlock"
                            Grid.Column="1"
                            Margin="5"
                                                                 />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--<GridView
            Grid.Row="1"
            ItemsSource="{x:Bind MediaFiles}"
            Visibility="Collapsed">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:MediaFileItem">
                    <StackPanel>
                        <Image
                            Width="100"
                            Height="100"
                            Source="{x:Bind Thumbnail}" />
                        <TextBlock Text="{x:Bind FileName}" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>-->
    </Grid>
</UserControl>

